<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Agregar</title>
    <link rel="stylesheet" href="/css/agregar.css">
</head>
<body>

    <div class="regresar">
        regresar
    </div>

     <form class="formulario" action="/agregarProductoPost" method="post">

        <div class="inputD">

            <label>codigo</label>

            <input type="text" name="codigo" placeholder="Ingrese codigo">

        </div>

        <div class="inputD">

            <label>producto</label>

            <input type="text" name="producto" placeholder="Ingrese producto">

        </div>

        <div class="inputD">
            <label>categoria</label>
            <select name="categoria_id">
                <% for (let x = 0; x < p.length; x++) { %>
                    <option value="<%= p[x].id %>"><%= p[x].categoria %></option>
                <% } %>
            </select>
        </div>
        <div class="inputD">

            <label>existencia_actual</label>

            <input type="text" name="existencia_actual" placeholder="Ingrese existencia_actual">

        </div>
        <div class="inputD">

            <label>precio</label>

            <input type="text" name="precio" placeholder="Ingrese precio">

        </div>
     
            <button type="submit">Registrar</button>
        
    </form>
<script>
    const regresar = document.querySelector('.regresar');
    regresar.addEventListener('click',()=>{
        window.location.href='/productos';
    });
</script>
</body>
</html>






